<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:padding="@dimen/dp_8"
        android:id="@+id/iv_shortcuta"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_namea"
        android:layout_marginTop="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:layout_below="@id/iv_shortcuta"
        style="@style/style_common_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_4"
        android:id="@+id/tv_size"
        android:textColor="@color/darker_gray"
        android:text="@string/str_size"
        android:layout_below="@id/tv_namea"
        style="@style/style_common_text"/>
    <ImageView
        android:id="@+id/iv_ok_ticka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_shortcuta"
        android:layout_alignRight="@id/iv_shortcuta"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:src="@mipmap/icon_ok_tick"
        android:visibility="gone"/>
</RelativeLayout>