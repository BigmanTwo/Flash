<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:id="@+id/iv_shortcut4"
        android:padding="@dimen/dp_4"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon_mp4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_shortcut4"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name4"
            android:gravity="left"
            android:padding="@dimen/dp_4"
            style="@style/style_common_text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_size4"
            android:gravity="left"
            android:padding="@dimen/dp_4"
            style="@style/style_common_text"
            android:text="@string/str_size"
            android:textColor="@color/darker_gray"/>
    </LinearLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/iv_shortcut4"
        android:layout_toRightOf="@id/iv_shortcut4"
        android:background="@android:color/darker_gray"/>
    <ImageView
        android:id="@+id/iv_ok_tick4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_shortcut4"
        android:layout_alignRight="@id/iv_shortcut4"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:src="@mipmap/icon_ok_tick"
        android:visibility="gone"/>
</RelativeLayout>